# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Nate Levesque <public@thenaterhood.com>
pkgname=heartbeat
pkgver=0.1
pkgrel=2
epoch=
pkgdesc=""
arch=('i686' 'x86_64')
url=""
license=('BSD')
groups=("python")
depends=()
makedepends=("unzip")
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("https://github.com/thenaterhood/heartbeat/archive/master.zip")
noextract=("master.zip")
md5sums=('dc1bb5f91c81188a5074e46a2ae9ec30') #generate with 'makepkg -g'

prepare() {
        unzip $srcdir/master.zip
	cd $srcdir/heartbeat-master
        rm -rf /tmp/build-heartbeat
}

build() {
	#cd "$srcdir/$pkgname-$pkgver"
	#./configure --prefix=/usr
	#make
        builddir=/tmp/build-heartbeat
        cd $srcdir/heartbeat-master
        mkdir -p $builddir
        python3 setup.py install --prefix=$builddir

        cp -r $srcdir/heartbeat-master/dist/_etc $builddir/etc
        cp -r $srcdir/heartbeat-master/dist/_bin $builddir/bin
        chmod +x $builddir/bin/*

        mkdir -p $builddir/etc/systemd/system
        cp $srcdir/heartbeat-master/dist/systemd/heartbeat.service $builddir/etc/systemd/system/
}

check() {
	#cd "$srcdir/$pkgname-$pkgver"
	#make -k check
        echo "No check"
}

package() {
	#cd "$srcdir/$pkgname-$pkgver"
	#make DESTDIR="$pkgdir/" install
        mv /tmp/build-heartbeat/* $pkgdir
}
