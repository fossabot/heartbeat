# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Nate Levesque <public@thenaterhood.com>
pkgname=heartbeat
pkgver=1.0.3
pkgrel=1
epoch=
pkgdesc=""
arch=('any')
url=""
license=('BSD')
groups=()
depends=("python-yaml")
makedepends=("unzip")
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=("etc/heartbeat.yml")
options=()
install=
changelog=
source=("https://github.com/thenaterhood/heartbeat/archive/master.zip")
noextract=("master.zip")
md5sums=('c0e530c8562f49e153aee952561ef6b8') #generate with 'makepkg -g'

prepare() {
        unzip $srcdir/master.zip
	cd $srcdir/heartbeat-master
}

build() {
	#cd "$srcdir/$pkgname-$pkgver"
	#./configure --prefix=/usr
	#make
        cd $srcdir/heartbeat-master
        make BUILD_DIR="$srcdir/../build"
}

check() {
	#cd "$srcdir/$pkgname-$pkgver"
	#make -k check
        echo "No check"
}

package() {
	#cd "$srcdir/$pkgname-$pkgver"
	#make DESTDIR="$pkgdir/" install
        cd $srcdir/heartbeat-master
        make BUILD_DIR="$srcdir/../build" INSTALL_PATH="$pkgdir/" install
        mkdir -p $pkgdir/usr
        mv $pkgdir/lib $pkgdir/usr/
        mv $pkgdir/bin $pkgdir/usr/
}
