pkgname=heartbeat
pkgver=0.3
pkgrel=6
epoch=
pkgdesc=""
arch=('any')
url=""
license=('BSD')
groups=("python", "python-yaml")
depends=()
makedepends=("unzip")
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("https://github.com/thenaterhood/heartbeat/archive/master.zip")
noextract=("master.zip")
md5sums=('2e6c58e0623cfee37bd8fe4f7422e85a') #generate with 'makepkg -g'

prepare() {
        unzip $srcdir/master.zip
	cd $srcdir/heartbeat-master
}

build() {
	#cd "$srcdir/$pkgname-$pkgver"
	#./configure --prefix=/usr
	#make
        cd $srcdir/heartbeat-master
        make
}

check() {
	#cd "$srcdir/$pkgname-$pkgver"
	#make -k check
        echo "No check"
}

package() {
	#cd "$srcdir/$pkgname-$pkgver"
	#make DESTDIR="$pkgdir/" install
        cd $srcdir/heartbeat-master
        make INSTALL_PATH="$pkgdir/" install
}
