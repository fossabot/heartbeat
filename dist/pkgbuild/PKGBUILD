# Maintainer: Nate Levesque <public@thenaterhood.com>
pkgname=heartbeat
pkgver=2.4.1
pkgrel=1
epoch=
pkgdesc=""
arch=('any')
url=""
license=('BSD')
groups=()
depends=("python3")
makedepends=("unzip")
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=(
        "etc/heartbeat.yml"
        "etc/heartbeat/heartbeat.conf",
        "etc/heartbeat/notifying.conf",
        "etc/heartbeat/monitoring.conf"
)
options=()
install=
changelog=
source=("https://github.com/thenaterhood/heartbeat/archive/master.zip")
noextract=("master.zip")
md5sums=('SKIP') #generate with 'makepkg -g'

prepare() {
        unzip $srcdir/master.zip
	cd $srcdir/heartbeat-master
}

build() {
	#cd "$srcdir/$pkgname-$pkgver"
	#./configure --prefix=/usr
	#make
        cd $srcdir/heartbeat-master
        python setup.py install --root="$pkgdir/" --optimize=1
}

check() {
	#cd "$srcdir/$pkgname-$pkgver"
	#make -k check
        echo "No check"
}

package() {
	#cd "$srcdir/$pkgname-$pkgver"
	#make DESTDIR="$pkgdir/" install
        cd $srcdir/heartbeat-master
        make BUILD_DIR="$srcdir/../build" INSTALL_PATH="$pkgdir/" install
        mkdir -p $pkgdir/usr
        mv $pkgdir/lib $pkgdir/usr/
        mv $pkgdir/bin $pkgdir/usr/
}
